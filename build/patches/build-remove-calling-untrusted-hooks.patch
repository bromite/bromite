   # Pull rc binaries using checked-in hashes.
   {
     'name': 'rc_win',
@@ -4264,30 +4170,6 @@ hooks = [
                 '-s', 'src/build/toolchain/win/rc/mac/rc.sha1',
     ],
   },
-  {
-    'name': 'rc_linux',
